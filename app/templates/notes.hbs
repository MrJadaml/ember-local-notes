<div class="container">
  <div class="top">
    <div class="type-area">
      {{textarea placeholder="Add a note!" value=noteCopy}}
      <button class="save-button"{{action 'newNote'}}>Save Note</button>
    </div>

    <div class="live-text">
      {{noteCopy}}
    </div>
  </div>

  <div class="saved-notes">
    {{#each note in model}}
      <div class="saved-note">
        {{note.body}}
        <div class="foot-note">
          <button class="delete-button"{{action 'deleteNote' note.id}}>Delete</button>
        </div>
      </div>
    {{/each}}
  <div>

  {{outlet}}
</div>
